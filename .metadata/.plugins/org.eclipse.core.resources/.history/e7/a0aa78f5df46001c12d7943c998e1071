package firstJavaPrograms;

import java.util.Random;

public class FinalReview1 {

	public static void main(String[] args) {

		int[] x = createArray(100);
		int[] counts;
		int count = 0;
		
		
		
		
		for(int i = 0; i < 100; i++)
		{
			if(x[i] == x[i + 1])
			{
				counts[count] = x[i];
				count++;
			}
		}
		
		//displayArray(counts);

	}
	
	public int[] createArray(int arraySize)
	{
		int num;
		Random r = new Random();
		int[] x = new int[arraySize];
		
		for(int i = 0; i < 100; i++)
		{
			num = r.nextInt(9);
			x[i] = num;
		}
		
		return x;
	}
	
	public static void displayArray(int[] array)
	{
		for(int i = 0; i < 100; i++)
		{
			System.out.println(array[i]);
		}
	}

}
